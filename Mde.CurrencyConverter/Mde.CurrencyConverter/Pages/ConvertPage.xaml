<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mde.CurrencyConverter.Pages.ConvertPage"
             Padding="10"
             Title="{ Binding Title }">
    <ContentPage.Content>
        <StackLayout Padding="0,30,0,0">
            <StackLayout Orientation="Horizontal">
                <Entry Text="{ Binding Input }"
                       VerticalOptions="Start"
                       HorizontalOptions="FillAndExpand" />
                <Label Text="{ Binding BaseCurrency }"
                       HorizontalOptions="End"></Label>
            </StackLayout>
            
            <Button Text="Convert!"
                   Command="{ Binding Convert }"
                   VerticalOptions="Start"></Button>
            
            <StackLayout Orientation="Horizontal">
                <Label Text="{ Binding Output }"
                       VerticalOptions="Start"
                       HorizontalOptions="FillAndExpand" />
                <Label Text="{ Binding QuoteCurrency }"
                       HorizontalOptions="End"></Label>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>