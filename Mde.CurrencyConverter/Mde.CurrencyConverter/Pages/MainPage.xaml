<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Mde.CurrencyConverter.ViewModels"
             x:Class="Mde.CurrencyConverter.Pages.MainPage">

    <StackLayout Padding="0,50,0,0">
        <ListView ItemsSource="{ Binding Rates }"
                  ItemTapped="RatesList_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label HorizontalOptions="StartAndExpand"
                                   Text="{ Binding Symbol }" />
                            <!--<Button HorizontalOptions="End" 
                                    Command="{ Binding Path=GotoConvert, Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel }} }"
                                    CommandParameter="{ Binding Symbol }"
                                    Text="->" />-->
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Read Crypto"
                Command="{ Binding ReadCrypto }"></Button>
    </StackLayout>

</ContentPage>
